<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".StudioActivity"
    tools:showIn="@layout/activity_studio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            card_view:cardBackgroundColor="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:background="@drawable/login_background"
                    android:textColor="@color/colorAccent"
                    />

                <TextView
                    android:id="@+id/tvDetailNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_background"
                    android:textColor="@color/colorAccent"
                     />

                <TextView
                    android:id="@+id/tvDetailComplement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_background"
                    android:textColor="@color/colorAccent"
                    />

                <TextView
                    android:id="@+id/tvDetailDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_background"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvDetailCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_background"
                    android:textColor="@color/colorAccent" />

                <TextView
                android:id="@+id/tvDetailZipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_background"
                android:textColor="@color/colorAccent" />


                <TextView
                    android:id="@+id/tvDetailPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_background"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvDetailComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_background"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

